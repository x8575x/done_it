<% @my_review.each do |review| %>
  <div class="border p-3 mt-3">
    <div class="center"><h3><%= review.book.title %></h3></div>
    <div class="row">
      <div class="center col-lg-4"><%= image_tag(review.book.image) %></div>
      <div class="col-lg-6">
        <%= render 'public/reviews/review', review: review %>
      </div>
    </div>
  </div>
<% end %>
<div class="row justify-content-center my-3"><%= paginate @my_review %></div>