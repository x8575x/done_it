<h1>Difficulty</h1>

<%= form_with model: @difficulty, url: admin_difficulty_path, method: :patch do |f| %>
  <%= render "layouts/errors", obj: @difficulty %>
  
  <div id="sign" class="row offset-2">
  <%= f.label :name, "読みやすさ", class: "col-lg-2" %>
  <%= f.text_field :name, class: "form-control col-lg-6" %>
  <div class="col-lg-2">
    <%= f.submit "編集", class: "btn" %>
  </div>
</div>
<% end %>

<p><%= link_to "戻る", admin_difficulties_path %></p>