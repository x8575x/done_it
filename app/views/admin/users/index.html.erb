<div class="container">

  <div class="row  offset-1 mt-5 mb-3">
    <div class="col-lg-6"><h3>会員一覧</h3></div>
  </div>

  <div class="row text-center">
    <div class="col-lg-10 offset-1">
      <table class="table table-bordered table-hover table-background">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr onclick="window.location.href='<%= admin_user_path(user.id) %>'" role="link">
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.email %></td>
              <% if user.is_deleted == true %>
                <td class="text-danger">退会</td>
              <% else %>
                <td class="text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>