<h1>会員一覧</h1>

<%= link_to "退会済み", admin_users_path(sort: 'true') %>　｜　<%= link_to "登録中", admin_users_path(sort: 'false') %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th></th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr onclick="window.location.href='<%= admin_user_path(user.id) %>'" role="link">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.email %></td>
        <% if user.is_deleted == true %>
          <td class="text-danger">退会</td>
        <% else %>
          <td class="text-success">有効</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row justify-content-center mb-3 mt-5"><%= paginate @users %></div>

