<containar>
  <div class="row justify-content-center mt-5">
    <h3 class="mini-title"><%= @user.name %>さんの会員詳細</h3>
  </div>
  <div class="row justify-content-center mb-1"><%= image_tag @user.get_profile_image(200,200) %></div>


  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="row">
        <table class="table mx-5 table-bordered">

          <tr>
            <td class="col-lg-2 bg-dark text-light">会員ID</td>
            <td class="col-lg-4"><%= @user.id %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">生年月日</td>
            <td><%= @user.birthday %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">性別</td>
            <% if @user.sex %>
              <td>男性</td>
            <% else %>
              <td>女性</td>
            <% end %>
          </tr>
          <tr>
            <td class="bg-dark text-light">自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
          <tr>
            <td class="bg-dark text-light">レビュー数</td>
            <td><%= @user.reviews.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">コメント数</td>
            <td><%= @user.comments.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">いいね数</td>
            <td><%= @user.favorites.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">読みたい本登録数</td>
            <td><%= @user.wants.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">読みたい本登録数</td>
            <td><%= @user.readings.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">読んだ本登録数</td>
            <td><%= @user.reads.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">積読本登録数</td>
            <td><%= @user.gets.count %></td>
          </tr>
          <tr>
            <td class="bg-dark text-light">ステータス</td>
            <% if @user.is_deleted == true %>
              <td class="text-danger">退会</td>
            <% else %>
              <td class="text-success">有効</td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>

    <div class="row justify-content-center m-5">
      <%= form_with model: @user, url: admin_user_path, methos: :patch do |f| %>
        <div class="custom-control custom-radio">
          <%= f.label :is_deleted, '会員ステータス', class: "mr-5" %>
          <%= f.radio_button :is_deleted, false %> <%= f.label :is_active, "有効", class: "text-success mr-3" %>
          <%= f.radio_button :is_deleted, true %> <%= f.label :is_active, "退会", class: "text-danger mr-3" %>
          <%= f.submit "変更", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
