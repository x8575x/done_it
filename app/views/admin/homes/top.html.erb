<h1>通報・タグ新規作成依頼一覧</h1>

<%= link_to "対応済み", admin_top_path(sort: 'true') %>　｜　<%= link_to "対応前", admin_top_path(sort: 'false') %>


<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th></th>
      <th>通報ユーザー</th>
      <th>カテゴリー</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr onclick="window.location.href='<%= admin_report_path(report.id) %>'" role="link">
        <td><%= report.id %></td>
        <td><%= report.user.name %></td>
        <td><%= report.category? %></td>
        <% if report.is_active == true %>
          <td class="text-danger">対応済み</td>
        <% else %>
          <td class="text-success">未対応</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row justify-content-center mb-3 mt-5"><%= paginate @reports %></div>

