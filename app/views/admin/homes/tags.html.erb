
<div class="container">



  <dvi class="row justify-content-center mt-5"><h2>Long</h2></dvi>

  <%= form_with model: @long, url: admin_longs_path, method: :post do |f| %>
    <div class="form-grop row offset-1 mt-5">
      <%= f.label :name,"長さ", class: "col-lg-2 mr-5" %>
      <%= f.text_field :name, class: "col-lg-6" %>
      <div class="col-lg-2">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row mt-3 offset-1">
    <% @longs.each do |long| %>
      <div class="col-lg-6"><%= long.name %></div>
      <%= link_to "編集",edit_admin_long_path(long.id), class: "col-lg-3" %>
      <%= link_to "削除",admin_long_path(long.id), method: :delete, class: "col-lg-3" %>
    <% end %>
  </div>





  




  <dvi class="row justify-content-center border-top mt-5"><h2>Mystery</h2></dvi>

