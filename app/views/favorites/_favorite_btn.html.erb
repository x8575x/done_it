<% if review.favorited_by?(current_user) %>
    <p>
      <%= link_to review_favorites_path(review.id), method: :delete do %>
        ♥<%= review.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to review_favorites_path(review.id), method: :post do %>
        ♡<%= review.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>