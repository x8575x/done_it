<!--ログインしていて、いいねがされている場合-->
<% if user_signed_in? && book.read_by?(current_user) %>
  <%= link_to book_reads_path(book), method: :post, remote: true, class: "book_favo_delete" do %>
    再読本に登録
  <% end %>
<!--ログインしていて、いいねがされていない場合-->
<% elsif user_signed_in? && !book.read_by?(current_user) %>
  <%= link_to book_reads_path(book), method: :post, class: "book_favo_create" do %>
    読んだ本に登録
  <% end %>
<!--ログインしていない場合-->
<% else %>
<% end %>