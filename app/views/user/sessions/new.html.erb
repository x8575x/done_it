<div class="center">
  <h2>ログイン</h2>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>

    <div id="sign" class="row">
      <%= f.label :email, "メールアドレス", class: "col-lg-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-5" %>
    </div>

    <div id="sign" class="row">
      <%= f.label :password, "パスワード", class: "col-lg-4" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-lg-5" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div id="sign">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div id="sign" class="row justify-content-center ml-5 mt-5">
      <%= f.submit "ログイン", class: "submit_create col-lg-2" %>
    </div>
  <% end %>

  <%= render "user/shared/links" %>
</div>