<div class="center"><h2>レビュー一覧(<%= @user.reviews.count %>件)</h2></div>
  <% @reviews.each do |review| %>
    <div class="border p-3 mt-3" onclick="window.location.href='<%= book_path(review.book.id) %>'" role="link">
      <div class="center"><h3><%= review.book.title %></h3></div>
      <div class="row">
        <div class="center col-lg-4"><%= image_tag(review.book.image) %></div>
        <div class="col-lg-6">
          <%= render 'user/reviews/review', review: review %>
        </div>
      </div>
    </div>
  <% end %>
<div class="row justify-content-center my-3"><%= paginate @reviews %></div>