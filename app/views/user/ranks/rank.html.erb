<div class="container">
  <div class="row justify-content-center mt-5"><h2>Book Rankings</h2></div>
  <div class="row justify-content-center mt-1">
    <%= link_to "レビュー数", rank_path(sort: 'review') %>
    　|　<%= link_to "読みたい本", rank_path(sort: 'want') %>
    　|　<%= link_to "読んでいる本", rank_path(sort: 'reading') %>
    　|　<%= link_to "読んだ本", rank_path(sort: 'read') %>
    　|　<%= link_to "積読本", rank_path(sort: 'get') %>
  </div>


  <div class="row justify-content-center mt-3">
    <% @books.each.with_index(1) do |book, i| %>

      <% if i == 1 %>
        <div class="row">
          <div class="text-warning"><h2><i class="fas fa-chess-king "></i> No.1</h2></div>
          <%= render 'book', book: book %>
        </div>

      <% elsif i == 2 %>
        <div class="row mt-3">
          <div class="text-secondary"><h2><i class="fas fa-trophy"></i> No.2</h2></div>
          <%= render 'book', book: book %>
        </div>

      <% elsif i == 3 %>
        <div class="row mt-3">
          <div class="text-danger"><h2><i class="fas fa-medal"></i> No.3</h2></div>
          <%= render 'book', book: book %>
        </div>

      <% elsif i == 4 %>
        <div class="row mt-3">
          <h4>No.4</h4>
          <%= render 'book', book: book %>
        </div>

      <% elsif i == 5 %>
        <div class="row mt-3">
          <h4>No.5</h4>
          <%= render 'book', book: book %>
        </div>

      <% else %>
        <div class="col-lg-4 mt-5">
          <h5>No.<%= i %></h5>
          <%= render 'book_down', book: book %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>