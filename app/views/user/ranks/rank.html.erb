<div class="container">
  <div class="row justify-content-center mt-5"><h2>Book Rankings</h2></div>
  <div class="row justify-content-center mt-1">
    <%= link_to "レビュー数", rank_path(sort: 'review') %>
    　|　<%= link_to "読みたい本", rank_path(sort: 'want') %>
    　|　<%= link_to "読んでいる本", rank_path(sort: 'reading') %>
    　|　<%= link_to "読んだ本", rank_path(sort: 'read') %>
    　|　<%= link_to "積読本", rank_path(sort: 'get') %>
  </div>


    <div class="row justify-content-center mt-3 mb-5">
      <% @books.each.with_index(1) do |book, i| %>

        <% if i == 1 %>
          <div class="row">
            <div class="text-warning"><h2><i class="fas fa-chess-king "></i> No.1</h2></div>
            <div class="row border p-3" onclick="window.location.href='<%= book_path(book.id) %>'" role="link">
              <div class="col-lg-4 text-center">
                <%= image_tag(book.image) %>
              </div>

              <div class="col-lg-7">
                <div class="row"><h3>『 <%= book.title %> 』</h3></div>
                <div class="row"><h4><%= book.author %></h4><h5>　(出版：<%= book.publisher_name %>)</h5></div>
                <div class="row"><%= book.item_caption %></div>
              </div>
            </div>
          </div>

        <% elsif i == 2 %>
          <div class="row mt-3">
            <div class="text-secondary"><h3><i class="fas fa-trophy"></i> No.2</h3></h></div>
            <div class="row border p-3" onclick="window.location.href='<%= book_path(book.id) %>'" role="link">
              <div class="col-lg-4 text-center">
                <%= image_tag(book.image) %>
              </div>

              <div class="col-lg-7">
                <div class="row"><h4>『 <%= book.title %> 』</h4></div>
                <div class="row"><h5><%= book.author %></h5><h6>　(出版：<%= book.publisher_name %>)</h6></div>
                <div class="row"><%= book.item_caption %></div>
              </div>
            </div>
          </div>

        <% elsif i == 3 %>
          <div class="row mt-3">
            <div class="text-danger"><h4><i class="fas fa-medal"></i> No.3</h4></h></div>
            <div class="row border p-3" onclick="window.location.href='<%= book_path(book.id) %>'" role="link">
              <div class="col-lg-4 text-center">
                <%= image_tag(book.image) %>
              </div>

              <div class="col-lg-7">
                <div class="row"><h5>『 <%= book.title %> 』</h5></div>
                <div class="row"><h6><%= book.author %></h6><h7>　(出版：<%= book.publisher_name %>)</h7></div>
                <div class="row"><%= book.item_caption %></div>
              </div>
            </div>
          </div>
        <% else %>
            <div class="col-lg-4">
              <div class="mt-3"><h5>No.<%= i %></h5></h></div>
              <div class="border p-3 m-3" onclick="window.location.href='<%= book_path(book.id) %>'" role="link">
                <div class="row justify-content-center text-center mb-3"><%= book.title %></div>
                <div class="row justify-content-center mb-3"><%= image_tag(book.image_m) %></div>
                <div class="row justify-content-center"><%= book.author %></div>
              </div>
            </div>
        <% end %>
      <% end %>
    </div>

</div>