<!--ログインしていてフォローしている場合-->
<% if user_signed_in? && user.following?(current_user) %>
  <%= link_to user_follow_relationships_path(user.id), class: "btn btn-danger btn-block", method: :delete do %>
    <i class="fas fa-user-alt-slash"></i>　フォロー外す
  <% end %>
<!--ログインしていてフォローしていない場合-->
<% elsif user_signed_in? && !user.following?(current_user) %>
  <%= link_to user_follow_relationships_path(user.id), class: "btn btn-primary btn-block", method: :post do %>
    <i class="fas fa-user-check"></i>　フォローする
  <% end %>
<% else %>
<% end %>