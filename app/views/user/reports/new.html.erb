<div class="center">
  <h2 class="red">通報</h2>


  <%= form_with model: @report, url: reports_path, method: :post do |f| %>

    <div  id="form" class="row">
      <%= f.label :category,"通報分類", class: "col-lg-4" %><div class="red">＊</div>
      <%= f.select :category, {'ネタバレを含む内容が通常の感想記入欄にある': 1, '攻撃的な内容が含まれる': 2, '差別的な内容が含まれている': 3, '不快な内容が含まれている': 4, '差別的な内容が含まれる': 5, 'その他': 6}, { include_blank: '選択してください'} %>
    </div>

    <div  id="form" class="row">
      <%= f.label :body,"内容詳細", class: "col-lg-4" %>
      <%= f.text_area :comment, class: "form-control col-lg-6", size: "30x10" %>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "通報する", class: "submit_create col-lg-3 m-5" %>
    </div>
  <% end %>
</div>
