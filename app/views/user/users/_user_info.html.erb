<div class="col-lg-3 mt-5">
  <div class="row justify-content-center"><%= image_tag user.get_profile_image(200,200) %></div>
  <div class="row">
    <table class="table table-borderless">
      <tr class="border-bottom"><th>Name</th><td><%= user.name %></td></tr>
      <tr class="border-bottom"><td colspan="2"><%= user.introduction %><td></tr>
      <tr class="border-bottom"><th>Birthday</th><td><%= user.birthday %></td></tr>
      <tr class="border-bottom"><th>Gender</th>
      <td><% if user.sex == true %>
            男性
          <% else %>
            女性
          <% end %>
      </td>
      <!--フォロー一覧ページ-->
      <tr class="border-bottom"><th>Follow</th>
        <td><%= link_to user_followings_path(user) do %>
              <%= user.followings.count %>
            <% end %>
      </td></tr>
      <!--フォロワー一覧ページ-->
      <tr class="border-bottom"><th>Follower</th>
        <td><%= link_to user_followers_path(user) do %>
              <%= user.followers.count %>
            <% end %>
      </td></tr>


    </table>
  </div>

  <div class="row"><%= link_to '読みたい本一覧', user_want_path(user), class: "btn btn-outline-success btn-block mb-1" %> </div>
  <div class="row"><%= link_to '読んでる本一覧', user_reading_path(user), class: "btn btn-outline-success btn-block mb-1" %> </div>
  <div class="row"><%= link_to '読んだ本一覧', user_read_path(user), class: "btn btn-outline-success btn-block mb-1" %> </div>
  <div class="row"><%= link_to '積読本一覧', user_get_path(user), class: "btn btn-outline-success btn-block mb-3" %> </div>


  <% if user == current_user && user.name != "guestuser" %>
    <%= link_to edit_user_path(current_user.id), class: "btn btn-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% elsif user.name != "guestuser" %>
    <div class="row">
      <%= render 'user/follow_relationships/follow_btn', user: user %>
    </div>
  <% end %>

</div>