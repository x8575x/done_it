<div class="container">



  <!--ユーザー情報表示-->

  <div class="row">

    <%= render 'user/users/user_info', user: @user %>

    <!--ユーザーレビュー表示-->

    <div class="col-lg-8 mt-5 ml-3">

      <% @reviews.each do |review| %>
        <div class="border p-3 mb-3">
          <div class="row">

            <div class="col-lg-4">
              <div class="row justify-content-center"><%= image_tag review.book.image %></div>
            </div>

            <div class="col-lg-8">
              <div class="row justify-content-center"><h4><%= review.book.title %></h4></div>

              <div class="row">
                <div class="col-lg-8"><%= review.type.name %></div>
              </div>

              <div class="row">
                <div class="col-lg-8"><%= review.long.name %></div>
              </div>

              <div class="row col-lg-12">
                <% review.mysteries.each do |mystery| %>
                  <%= mystery.name %>
               <% end %>
              </div>

              <div class="row col-lg-12">
                <% review.difficulties.each do |difficulty| %>
                  <%= difficulty.name %>
               <% end %>
              </div>

              <div class="row col-lg-12">
                <% review.tags.each do |tag| %>
                  <%= tag.name %>
                <% end %>
              </div>

            </div>
          </div>

          <div class="row ml-3 col-lg-11 border-top p-3">
            <%= review.body %>
          </div>

          <div class="row ml-3 col-lg-11 border-top p-3">
            <%= review.netabare %>
          </div>

          <div class="row justify-content-center">
            <div class="col-lg-2"><%= link_to '詳細へ', review_path(review.id), class: "btn btn-primary" %></div>

            <% if review.user = current_user %>
              <div class="col-lg-2"><%= link_to '編集', edit_review_path(review.id), class: "btn btn-success" %></div>
              <div class="col-lg-2"><%= link_to '削除', review_path(review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></div>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>