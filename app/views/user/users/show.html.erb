<div class="container">

  <div class="row mt-5">

    <div class="col-lg-3">
      <div class="row justify-content-center"><%= image_tag @user.get_profile_image(200,200) %></div>
      <div class="row">
        <table class="table table-borderless">
          <tr class="border-bottom"><th>Name</th><td><%= @user.name %></td></tr>
          <tr class="border-bottom"><td colspan="2"><%= @user.introduction %><td></tr>
          <tr class="border-bottom"><th>Birthday</th><td><%= @user.birthday %></td></tr>
          <tr class="border-bottom"><th>Gender</th>
          <td><% if @user.sex == true %>
                男性
              <% else %>
                女性
              <% end %>
          </td>
          <tr class="border-bottom"><th>Follow</th>
            <td><%= link_to user_followings_path(@user) do %>
                  <%= @user.followings.count %>
                <% end%>
          </td></tr>
          <tr class="border-bottom"><th>Follower</th>
            <td><%= link_to user_followings_path(@user) do %>
                  <%= @user.followers.count %>
                <% end%>
          </td></tr>


        </table>
      </div>

      <% if @user == current_user %>
        <%= link_to edit_user_path(current_user.id), class: "btn btn-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% else %>
        <div class="row">
          <%= render 'user/follow_relationships/follow_btn', user: @user %>
        </div>
      <% end %>

    </div>

    <div class="col-lg-8 ml-3">

      <% @reviews.each do |review| %>
        <div class="border p-3 mb-3">
          <div class="row">

            <div class="col-lg-4">
              <div class="row justify-content-center"><%= image_tag review.book.image %></div>
            </div>

            <div class="col-lg-8">
              <div class="row justify-content-center"><h4><%= review.book.title %></h4></div>

              <div class="row">
                <div class="col-lg-8"><%= review.type.name %></div>
              </div>

              <div class="row">
                <div class="col-lg-8"><%= review.long.name %></div>
              </div>

              <div class="row col-lg-12">
                <% review.mysteries.each do |mystery| %>
                  <%= mystery.name %>
               <% end %>
              </div>

              <div class="row col-lg-12">
                <% review.difficulties.each do |difficulty| %>
                  <%= difficulty.name %>
               <% end %>
              </div>

              <div class="row col-lg-12">
                <% review.tags.each do |tag| %>
                  <%= tag.name %>
                <% end %>
              </div>

            </div>
          </div>

          <div class="row ml-3 col-lg-11 border-top p-3">
            <%= review.body %>
          </div>

          <div class="row ml-3 col-lg-11 border-top p-3">
            <%= review.netabare %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>