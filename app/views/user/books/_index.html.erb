<div class="container">
  <div class="row justify-content-center offset-1 mt-5">

    <% wants.each do |want| %>
      <div class="col-lg-3 border p-3 m-3" onclick="window.location.href='<%= book_path(want.book.id) %>'" role="link">
        <div class="row justify-content-center text-center mb-3"><%= want.book.title %></div>
        <div class="row justify-content-center mb-3"><%= image_tag(want.book.image) %></div>
        <div class="row justify-content-center mb-3"><%= want.book.author %></div>
        <div class="row justify-content-center mb-3"><%= want.book.publisher_name %></div>
      </div>
    <% end %>
  </div>
</div>                    