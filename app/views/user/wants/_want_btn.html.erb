<!--ログインしていて、いいねがされている場合-->
<% if user_signed_in? && book.want_by?(current_user) %>
  <%= link_to book_wants_path(book), method: :delete, remote: true, class: "book_favo_delete" do %>
    読みたい本から解除
  <% end %>
<!--ログインしていて、いいねがされていない場合-->
<% elsif user_signed_in? && !book.want_by?(current_user) %>
  <%= link_to book_wants_path(book), method: :post, remote: true, class: "book_favo_create" do %>
    読みたい本に登録
  <% end %>
<!--ログインしていない場合-->
<% else %>
<% end %>