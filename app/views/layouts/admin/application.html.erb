<!DOCTYPE html>
<html>
  <head>
    <title>done it?</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <%= link_to root_path, class: "nav-link text-white" do %>
          <%= image_tag 'icon', size: "40x40" %> <%= image_tag 'done_it', size: "209x40" %>
        <% end %>

        <!--ハンバーガーアイコン-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!--ハンバーガーが開いていた場合のヘッダー-->
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

            <li class="nav-item">
              <%= link_to admin_users_path, class: 'nav-link text-white' do %>
                <i class="fas fa-users"></i> Users
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_reviews_path, class: 'nav-link text-white' do %>
                <i class="fas fa-file-alt"></i>Reviews
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_types_path, class: 'nav-link text-white' do %>
                <i class="fas fa-book"></i>types
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_longs_path, class: 'nav-link text-white' do %>
                <i class="fas fa-ruler"></i>Longs
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_mysteries_path, class: 'nav-link text-white' do %>
                <i class="fas fa-search"></i>Mysteries
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_difficulties_path, class: 'nav-link text-white' do %>
                <i class="fas fa-book-reader"></i>Difficulties
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to admin_tags_path, class: 'nav-link text-white' do %>
                <i class="fas fa-paperclip"></i>Tags
              <% end %>
            </li>



            <li class="nav-item">
              <%= link_to destroy_admin_session_path, class: 'nav-link text-white', method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> Log out
              <% end %>
            </li>

          </ul>

        </div>
      </div>
    </nav>
  </header>

  <body>
    <div class="main">
      <%= render partial: 'layouts/flash' %>
      <%= yield %>
    </div>
  </body>
</html>
